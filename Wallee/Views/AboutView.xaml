<Window x:Class="Wallee.Views.AboutView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wallee.Views"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Style="{StaticResource MyWindowStyle}"
        WindowStyle="None"
        Height="267" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="74" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Text="Wallee" HorizontalAlignment="Center" VerticalAlignment="Center"
                   FontSize="72" FontFamily="{StaticResource NotoSans}" />
        <Image Grid.Row="1" Source="../Resources/27002.jpg" Height="62" />
        <TextBlock HorizontalAlignment="Center" Grid.Row="2"
                   FontSize="22" FontWeight="Light" Text="Version 1.0.1"
                   Height="42" VerticalAlignment="Bottom" Margin="0,10,0,-10" />
        <TextBlock Margin="0,0,0,0" HorizontalAlignment="Center" FontWeight="Light" Grid.Row="3" FontSize="22"
                   Text="Author: Vorobiev N.A." Height="42" />
    </Grid>
</Window>